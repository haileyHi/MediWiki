<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_text" parent="Widget.AppCompat.TextView">
        <item name="fontWeight">700</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="hint_title" parent="Widget.AppCompat.TextView">
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="explain_text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="fontWeight">500</item>
    </style>
</resources>