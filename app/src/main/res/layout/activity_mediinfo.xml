<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_itemImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_itemName"
        style="@style/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        android:text="타이레놀정500밀리그람(아세트아미노펜)"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/iv_itemImage"
        app:layout_constraintStart_toStartOf="@id/iv_itemImage"
        app:layout_constraintTop_toBottomOf="@id/iv_itemImage" />

    <TextView
        android:id="@+id/tv_efcyTitle"
        style="@style/hint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="이 약의 효능은 무엇입니까?"
        app:layout_constraintStart_toStartOf="@id/tv_itemName"
        app:layout_constraintTop_toBottomOf="@id/tv_itemName" />

    <TextView
        android:id="@+id/tv_efcyQesitm"
        style="@style/explain_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:text="이 약은 심근경색, 뇌경색, 불안정형 협심증에서 혈전 생성 억제와..."
        app:layout_constraintStart_toStartOf="@id/tv_itemName"
        app:layout_constraintTop_toBottomOf="@id/tv_efcyTitle" />

    <TextView
        android:id="@+id/tv_useMethodQesitm_Title"
        style="@style/hint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="이 약은 어떻게 사용합니까?"
        app:layout_constraintStart_toStartOf="@id/tv_itemName"
        app:layout_constraintTop_toBottomOf="@id/tv_efcyQesitm" />

    <TextView
        android:id="@+id/tv_useMethodQesitm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="성인은 1회 1정, 1일 1회 복용합니다.."
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        style="@style/explain_text"
        app:layout_constraintStart_toStartOf="@id/tv_itemName"
        app:layout_constraintTop_toBottomOf="@id/tv_useMethodQesitm_Title" />


</androidx.constraintlayout.widget.ConstraintLayout>